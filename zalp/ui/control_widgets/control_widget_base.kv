<HorizontalControlWidget>:
    # Override title in concrete HorizontalControlWidgets
    title: 'Default widget title'

    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height

    # gray background just to see the widgets
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2
        Rectangle:
            pos: self.pos
            size: self.size
