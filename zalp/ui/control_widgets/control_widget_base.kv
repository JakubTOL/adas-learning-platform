<HorizontalControlWidgetLayout>:
    orientation: 'vertical'

    size_hint_y: None
    height: self.minimum_height
    padding: 5, 0

<HorizontalControlWidgetLabel>:
    bold: True
    font_size: 20

    # Make title always the same size
    size_hint_y: None
    height: 40
    # dark gray background to separate title and content
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            pos: self.pos
            size: self.size

